#include "CppUTest/TestHarness.h"
#include "relay.h"
#include "water.h"

#define RELAY_PIN 2
#define WATER_PIN 5

TEST_GROUP(relayinit)
{
  void setup()
  {
    relay_init(&relay_port, RELAY_PIN);
    water_init(&relay_port, WATER_PIN);  // same port as relay
    relay_port |= (1<<WATER_PIN); // start high = got water
  }
  
  void teardown()
  {
  }

  uint8_t relay_port;
  
};

TEST(relayinit, RelayStartStop)
{
  relay_set_maxon(30);
  relay_timer_inc();
  relay_on();
  BYTES_EQUAL(RELAY_ON, relay_get_status());
  relay_off();
  BYTES_EQUAL(RELAY_OFF, relay_get_status());
}
